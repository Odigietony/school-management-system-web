@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="contact-form col-sm-6">
        <div class="col-xs-12">
            <h3><i class="fa fa-sign-in"></i> LOGIN TO YOUR ACCOUNT</h3>
        </div>
        <div class="clearfix"></div>
       <form method="post">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <div asp-validation-summary="All" class="text-danger"></div> 
            </div>
             
            <div class="col-xs-12">
                <label asp-for="EmailAddress"><i class="fa fa-user"></i> EMAIL ADDRESS</label>
                <input asp-for="EmailAddress" class="form-control" placeholder="Email Address">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="col-xs-12">
                <label asp-for="Password"><i class="fa fa-key"></i> PASSWORD</label>
                <input class="form-control" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12"> 
                <input class="form-check-input" asp-for="RememberMe">
                <label asp-for="RememberMe" class="form-check-label"> REMENBER ME</label>
                <span class="text-danger" asp-validation-for="RememberMe"></span>
            </div> 
            <div class="clearfix"></div>
            <div class="col-xs-12">
                <a href="#" class="forgot-link">FORGOT PASSWORD?</a> 
                <button type="submit" class="submit-contact-form btn-lg btn-block"><i class="fa fa-sign-in"></i> LOGIN</button>
            </div>
            <div class="clearfix"></div>
       </form>
    </div> 
</div> 

 