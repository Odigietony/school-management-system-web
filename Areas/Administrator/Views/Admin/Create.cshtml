@model CreateAdminViewModel

@{
    ViewBag.Title = "Add Admin";
}

<!-- MAIN CONTENT --> 
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12 clear-padding-xs">
			<h5 class="page-title"><i class="fa fa-user-secret"></i>ADD NEW ADMIN</h5>
			<div class="section-divider"></div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12 clear-padding-xs">
			<div class="col-md-12">
				<div class="dash-item first-dash-item">
					<h6 class="item-title"><i class="fa fa-user-secret"></i>ADMIN INFO</h6>
					<div class="inner-item">
					<form enctype="multipart/form-data" asp-action="Create" asp-controller="Admin" method="post"> 
						<div class="dash-form">
							<div class="col-sm-3">
								<label asp-for="Firstname" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>FIRST NAME</label>
								<input  asp-for="Firstname" placeholder="FIRST NAME" />
								<span asp-validation-for="Firstname" class="text-danger"></span>
							</div>
							<div class="col-sm-3">
								<label asp-for="Lastname" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>LAST NAME</label>
								<input asp-for="Lastname" placeholder="LAST NAME" />
								<span asp-validation-for="Lastname" class="text-danger"></span>
							</div>
							<div class="col-sm-3">
								<label class="clear-top-margin"><i class="fa fa-venus"></i>ROLE</label>
								<select asp-for="Role.Id" asp-items = "@(new SelectList(@ViewBag.List, "Id", "Name"))">
								 
								</select>
							</div>
							<div class="clearfix"></div> 
							<div class="col-sm-3">
								<label asp-for="PhoneNumber"><i class="fa fa-phone"></i>PHONE #</label>
								<input asp-for="PhoneNumber" placeholder="PHONE NUMBER" />
								<span asp-validation-for="PhoneNumber" class="text-danger"></span>
							</div>
							<div class="col-sm-3">
								<label asp-for="EmailAddress"><i class="fa fa-envelope-o" ></i>EMAIL ADDRESS</label>
								<input asp-for="EmailAddress" placeholder="john@pathshala.com" />
								<span asp-validation-for="EmailAddress" class="text-danger"></span>
							</div> 
							<div class="clearfix"></div>
							<div class="col-sm-3">
								<label asp-for="Image" ><i class="fa fa-file-picture-o"></i>UPLOAD PHOTO</label>
								
								<div class="custom-file">
									<input asp-for="Image"  class="custom-file-input"/>
									<label class="custom-file-label">Choose another image</label>
           						 </div>
							</div>
							<div class="clearfix"></div>
							<div class="col-sm-12"> 
						</div>
						<button type="submit" class="btn btn-success"><i class="fa fa-paper-plane"></i> SAVE</button>
					</form>
					</div> 
					</div>
					<div class="clearfix"></div>
					
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<div class="menu-togggle-btn">
    <a href="#menu-toggle" id="menu-toggle"><i class="fa fa-bars"></i></a>
</div>



@section Scripts{
	<script src="~/dashboard/assets/js/Custom.js"></script>
}