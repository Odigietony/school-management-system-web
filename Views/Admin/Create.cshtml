@model CreateAdminViewModel

@{
    ViewBag.Title = "Add Admin";
}

<!-- MAIN CONTENT --> 
<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12 clear-padding-xs">
			<h5 class="page-title"><i class="fa fa-user-secret"></i>ADD NEW ADMIN</h5>
			<div class="section-divider"></div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12 clear-padding-xs">
			<div class="col-md-12">
				<div class="dash-item first-dash-item">
					<h6 class="item-title"><i class="fa fa-user-secret"></i>ADMIN INFO</h6>
					<div class="inner-item">
						<div class="dash-form">
							<div class="col-sm-3">
								<label asp-for="@Model.Firstname" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>FIRST NAME</label>
								<input  asp-for="@Model.Firstname" placeholder="FIRST NAME" />
								<span asp-validation-for="@Model.Firstname"></span>
							</div>
							<div class="col-sm-3">
								<label asp-for="@Model.Lastname" class="clear-top-margin"><i class="fa fa-user-circle-o"></i>LAST NAME</label>
								<input asp-for="@Model.Lastname" placeholder="LAST NAME" />
								<span asp-validation-for="@Model.Lastname"></span>
							</div>
							<div class="col-sm-3">
								<label class="clear-top-margin"><i class="fa fa-venus"></i>ROLE</label>
								<select asp-for="@Model.Role.Id" asp-items = "@(new SelectList(@ViewBag.List, "Id", "Name"))">
								 
								</select>
							</div>
							<div class="clearfix"></div>
							

							<div class="col-sm-3">
								<label asp-for="@Model.PhoneNumber"><i class="fa fa-phone"></i>PHONE #</label>
								<input asp-for="@Model.PhoneNumber" placeholder="PHONE NUMBER" />
								<span asp-validation-for="@Model.PhoneNumber"></span>
							</div>
							<div class="col-sm-3">
								<label asp-for="EmailAddress"><i class="fa fa-envelope-o" ></i>EMAIL ADDRESS</label>
								<input asp-for="EmailAddress" placeholder="john@pathshala.com" />
							</div>
							
							<div class="clearfix"></div>
							<div class="col-sm-3">
								<label asp-for="Image"><i class="fa fa-file-picture-o"></i>UPLOAD PHOTO</label>
								<input asp-for="Image" placeholder="Upload admin photo" />
							</div>
							<div class="clearfix"></div>
						<div class="col-sm-12">
						<a href="#"><i class="fa fa-paper-plane"></i> SAVE</a>
						</div>
						
					</div> 
					</div>
					<div class="clearfix"></div>
					
				</div>
			</div>
		</div>
	</div>
</div>
</div>
 <div class="menu-togggle-btn">
        <a href="#menu-toggle" id="menu-toggle"><i class="fa fa-bars"></i></a>
    </div>