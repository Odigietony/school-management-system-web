@model AllRolesViewModel


@{
    ViewBag.Title = "All Roles";
}


<!-- MAIN CONTENT --> 
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 clear-padding-xs">
                <h5 class="page-title"><i class="fa fa-users"></i>ALL ROLES</h5>
                <div class="section-divider"></div>
            </div>
        </div>
        
@if(Model.Roles.Any())
{
        <div class="row">
            <div class="col-lg-12 clear-padding-xs">
                <div class="col-lg-12">
                    <div class="dash-item first-dash-item">
                        <h6 class="item-title"><i class="fa fa-tags"></i>ROLES</h6>
                        <div class="inner-item">
                            <table id="attendenceDetailedTable" class="display responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th><i class="fa fa-user"></i>ID</th>
                                        <th><i class="fa fa-id-card"></i>NAME</th>
                                        <!-- <th><i class="fa fa-book"></i>CLASS</th>
                                        <th><i class="fa fa-cogs"></i>SECTION</th>
                                        <th><i class="fa fa-puzzle-piece"></i>ROLL #</th>
                                        <th><i class="fa fa-phone"></i>CONTACT #</th>
                                        <th><i class="fa fa-envelope-o"></i>EMAIL</th> -->
                                        
                                        <th><i class="fa fa-tasks"></i>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var roles in Model.Roles)
                                    {
                                        <tr>
                                            <td>@roles.Id</td>
                                            <td>@roles.Name</td>
                                            <!-- <td>STD 8</td>
                                            <td>PTH08A</td>
                                            <td>PTH05A01</td>
                                            <td>0987654321</td>
                                            <td>lennore@gmail.com</td> -->
                                            <td class="action-link">
                                                <a class="edit" href="#" onclick="modalPopUp()"><i class="fa fa-edit"></i></a>
                                                <a class="delete" href="#" title="Delete" data-toggle="modal" data-target="#deleteDetailModal"><i class="fa fa-remove"></i></a>
                                            </td>
                                        </tr>
                                        <input id="roleId" value="@roles.Id" hidden />
                                    } 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>  

    <!-- Delete Modal -->
    <div id="deleteDetailModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-trash"></i>DELETE STUDENT</h4>
                </div>
                <div class="modal-body">
                    <div class="table-action-box">
                        <a href="#" class="save"><i class="fa fa-check"></i>YES</a>
                        <a href="#" class="cancel" data-dismiss="modal"><i class="fa fa-ban"></i>CLOSE</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    
    
    <!--Edit details modal-->
    <div id="editDetailModal" class="modal fade" role="dialog"> 
        <!-- <partial name="~/Views/UserRoles/_EditRolePartialView.cshtml" />  -->
    </div>

}
else
{
    <div class="chart-title">
		<h4 class="bottom-title">NO ROLES TO DISPLAY</h4>
	</div>
    <div class="chart-legends">
		<a class="btn btn-large" asp-action="addroles" asp-controller="userroles"><span>ADD NEW ROLE</span></a> 
	</div>
}
 
 <div class="menu-togggle-btn">
        <a href="#menu-toggle" id="menu-toggle"><i class="fa fa-bars"></i></a>
    </div>


@section Scripts{
    <script>
        function modalPopUp(e)
        { 
            e.preventDefault();
            var Id = $('#roleId').val();
            $.ajax({
                type: "GET",
                url: "/UserRoles/EditRole",
                data: Id,
                success: function(data){
                    $('#editDetailModal').modal('show');
                }
            });
        }
    </script>
}